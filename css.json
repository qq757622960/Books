    // ==================== 高效前端(Book) =======================
    "effective-nav": {
        "prefix": "effective-nav",
        "body": [
            "nav li { opacity: 0.5; }",
            "body.home nav li.home { opacity: 1; }",
            "nav li:hover { opacity: 1; }"
        ],
        "description": "通过 body 与 li 的类建立起一一对应的关系"
    },
    "effective-item": {
        "prefix": "effective-item",
        "body": [
            "/* item 个数不一定 如果只有1个, 那这个 item 占宽 100%, ",
            "有 2 个时每一个占 50%,  3 个时每一个占 33% */",
            "ul { overflow: hidden; }",
            "ul li { float: left; }",
            "li { width: 100%; height: 200px; background-color: red; }",
            "li:first-child:nth-last-child(2),",
            "li:first-child:nth-last-child(2) ~ li { width: 50%; }",
            "li:first-child:nth-last-child(3),",
            "li:first-child:nth-last-child(3) ~ li { width: 33%; }"
        ],
        "description": "item 个数不一定 如果只有1个, 那这个 item 占宽 100%, 有 2 个时每一个占 50%,3 个时每一个占 33%"
    },
    "effective-checkbox": {
        "prefix": "effective-checkbox",
        "body": [
            "/* 利用 css3 伪类 :checked */",
            "input[type=checkbox] { display: none;}",
            ".checkbox { display: inline-block; width: 20px; height: 20px; border: 1px solid #ddd; }",
            "input[type=checkbox]:checked + .checkbox { background-color: red; }"
        ],
        "description": "美化 checkbox/radio 样式"
    },
    // ==================== CSS 揭秘(Book) =======================
    "secrets-circular": {
        "prefix": "secrets-circular",
        "body": [
            ".m-circular { width: 30px; height: 30px; margin: 50px auto 0; font-size: 10px; }",
            ".m-circular svg { display: block; overflow: visible; }",
            ".m-circular text { fill: #fff; }",
            ".m-circular path { fill: none; }"
        ],
        "description": "环形文字"
    },
    "secrets-filter": {
        "prefix": "secrets-filter",
        "body": [
            ".m-filter {  position: relative; width: 500px; height: 300px; margin: 90px auto; }",
            ".m-filter,",
            ".inner:before { background: url(./timg3.jpeg) no-repeat; background-size: cover; }",
            ".inner { position: absolute; top: 50%; left: 50%; width: 450px; height: 250px; transform: translate(-50%, -50%); background-color: hsla(0,0%,100%,.3); overflow: hidden; text-align: center; }",
            ".inner:before { content: ''; position: absolute; top: 0; right: 0; bottom: 0; left: 0; filter: blur(20px);/* background: rgba(255,0,0,.5); */ z-index: -1; margin: -30px;}"
        ],
        "description": "毛玻璃"
    },
    // ==================== 注释 =======================
    "comment": {
        "prefix": "comment",
        "body": [
            "/* Moudle Xxx",
            "----------------------------------------------------- */"
        ],
        "description": "comment"
    },
    // 边框
    "bor": {
        "prefix": "bor",
        "body": [
            "border-width: 1px; border-style: solid; border-color: #000;"
        ],
        "description": "bor"
    },
    // 背景缩写
    "bg": {
        "prefix": "bg",
        "body": [
            "background: transparent url() no-repeat 0 0 / cover;"
        ],
        "description": "bg"
    },
    // 背景全写
    "bga": {
        "prefix": "bga",
        "body": [
            "background-color: transparent;\nbackground-image: url();\nbackground-position: 0 0;\nbackground-repeat: no-repeat;\nbackground-size: cover;"
        ],
        "description": "bga"
    },
    // margin
    "mar": {
        "prefix": "mar",
        "body": [
            "margin-top: 10px; margin-right: 5px; margin-bottom: 10px; margin-left: 5px;"
        ],
        "description": "mar"
    },
    // padding
    "pad": {
        "prefix": "pad",
        "body": [
            "padding-top: 10px;\npadding-right: 5px;\npadding-bottom: 10px;\npadding-left: 5px;"
        ],
        "description": "pad"
    },
    // font
    "font": {
        "prefix": "font",
        "body": [
            "font-style: italic; font-weight: bold; font-size: .8em; line-height: 1.2; font-family: Arial, sans-serif;"
        ],
        "description": "font"
    },
    // 透明白色背景
    "bgcba": {
        "prefix": "bgcba",
        "body": [
            "background-color: rgba(0,0,0,.8);"
        ],
        "description": "bgcba"
    },
    // flex
    "flex": {
        "prefix": "flex",
        "body": [
            "display: flex;\nalign-items: center;\njustify-content: center;\nflex-direction: column;"
        ],
        "description": "flex"
    },
    // 单行省略
    "ell": {
        "prefix": "ell",
        "body": [
            "white-space: nowrap; text-overflow: ellipsis; overflow: hidden;"
        ],
        "description": "ell"
    },
